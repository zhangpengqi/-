@import "../../../../common.wxss";
.product {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap; }

.product-item {
  width: 48%;
  margin: 1% 1%;
  display: flex;
  flex-direction: column; }

.product-item .nav-img {
  width: 100%; }

.product-name {
  height: 60rpx;
  margin-bottom: 30rpx;
  margin-left: 10%; }

.product-bottom {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  flex-wrap: wrap;
  align-items: stretch; }

.product-price {
  height: 60rpx;
  color: red; }

.iconfont.icon-jiarugouwuche {
  justify-content: center;
  margin-left: 10rpx;
  font-size: 170%;
  color: #55a532;
  width: 20%; }

